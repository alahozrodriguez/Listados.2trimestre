    <script>
        var juegos = [     
        {"name": "Animal_Crossing", "year": 2015, "Type": "Adventure"},
        {"name": "Coocking Mamma", "year": 2022, "Type": "Coock"},
        {"name": "Tomodachy Life", "year": 2017, "Type": "Adventure"},
        {"name": "Geometry Dash", "year": 2013, "Type": "Arcade"},
        ];
    </script>
<body>
    <body>
        Nombre: <span id="nombre"></span><br>
        <input type="button" value="Anterior" onclick="ant()">
        <input type="button" value="Siguiente" onclick="sig()">
        <script>
            var a=0;
            document.getElementById("nombre").innerHTML = juegos[0].name;
            function sig() {
                a=a+1;
                document.getElementById("nombre").innerHTML = juegos[a%4].name;
            }
        function ant() {
            a=a-1;
            if (a<0) {
                a=3;
            }
            document.getElementById("nombre").innerHTML = juegos[a%4].name;
        }
        </script>
    </body>
